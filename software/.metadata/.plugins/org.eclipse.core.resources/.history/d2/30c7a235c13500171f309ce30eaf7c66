#include <sys/alt_types.h>

#include "utils.h"

unsigned char RxBuf[RXBUFSIZE];// the receiver buffer.
int RxHead = 0; // the circular buffer index
int RxTail = 0;

alt_u8 isDataAvailable()
{
	return (RxTail != RxHead);
}

unsigned char _getchar()
{
 alt_u8 temp;
// while (RxTail == RxHead){
//	 nr_delay(1);
// }
 temp = RxBuf[RxTail];
 if (++RxTail > (RXBUFSIZE -1))
 {
	 RxTail = 0;
 }
 return(temp);
}

